<table class= "post-view">

<% @posts.each do |post| %>

<tr>
  <th><%= link_to post.title, post_path(post) %></th>
</tr>

<tr>
  <td>
  <%= render partial: "topic", locals: {post: post} %>
  </td>
</tr>

<tr>
  <td>Submitted: <%= time_ago_in_words(post.created_at) %> by <%= post.user.email %></td>
</tr>

<div class="voting">
<tr>
<td>
 <%= link_to like_post_path(post), method: :put do %>
    <%= "Upvotes: #{post.get_upvotes.size} ğŸ‘ " %>
  <% end %>
</td>

<td>
  <%= link_to dislike_post_path(post), method: :put do %>
    <%= "Downvotes: #{post.get_downvotes.size} ğŸ‘ "  %>
  <% end %>
</td>
</tr>
</div>

<% end %>
</table>
