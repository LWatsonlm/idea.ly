<% @posts.each do |post| %>

<div class= "post-view">

  <%= link_to post.title, post_path(post) %> <br />
  <%= render partial: "topic", locals: {post: post} %>


  Submitted: <%= time_ago_in_words(post.created_at) %> by <%= post.user.email %>

 <%= link_to like_post_path(post), method: :put do %>
  <%= "Upvotes: #{post.get_upvotes.size} 👍 " %>
 <% end %>

 <%= link_to dislike_post_path(post), method: :put do %>
  <%= "Downvotes: #{post.get_downvotes.size} 👎 "  %>
 <% end %>

</div>

<% end %>
